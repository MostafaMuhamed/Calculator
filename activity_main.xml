<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity"
    android:orientation="vertical"
    android:background="#587AA5"
    >

    <Button
        android:id="@+id/btn_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="0"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#F37C3D"
        android:background="@drawable/background_txt_result"
        android:layout_margin="5dp"
        android:inputType="number"
        android:maxLength="5"
        />

     <View
         android:layout_width="match_parent"
         android:layout_height="5dp"
         android:background="#16335F"
         android:layout_margin="5dp"
         />

    <Button
        android:id="@+id/btn_C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#8E0C24"
        android:gravity="center"
        android:padding="3dp"
        android:background="@drawable/background_button"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/background_big_linear"
        android:layout_margin="5dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <Button
            android:id="@+id/btn_seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#8E0C24"
            android:padding="5dp"
            android:background="@drawable/background_button"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#8E0C24"
            android:padding="5dp"
            android:background="@drawable/background_button"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#8E0C24"
            android:padding="5dp"
            android:background="@drawable/background_button"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn_divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#8E0C24"
            android:padding="5dp"
            android:background="@drawable/background_button"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >
            <Button
                android:id="@+id/btn_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_multiplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >
            <Button
                android:id="@+id/btn_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_subtract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >
            <Button
                android:id="@+id/btn_zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#8E0C24"
                android:padding="5dp"
                android:background="@drawable/background_button"
                android:layout_margin="5dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>